{
	"compilerOptions": {
		"declaration": true,
		"strictNullChecks": true,
		"target": "es6",
		"outDir": "dist",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"pretty": true,
		"lib": [
			"ES2016",
		],
		"rootDir": "src",
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"alwaysStrict": false
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}